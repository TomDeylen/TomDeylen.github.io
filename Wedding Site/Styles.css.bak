body {
	background-color:#ccc;
	margin: 0;
	padding: 0;
}

header {
	background-color: white;
	background-image: url("Images/border.png");
	background-repeat: repeat-x;
	background-position: right bottom;
	position:fixed;
	height: 15vh;
	min-height: 120px;
	width: 100%;
	top: 0px;
	z-index: 1;
	
}

header img{
	position:relative;
	height: 100%;
	float:left;
}

header h1{
	margin:0;
	padding-top:5px;
	font-size:2em;
	position:relative;

}
header h2{
	margin:0;
	padding-left: 5px;
	display: inline-block;
}
	/* Dropdown Button */
	.dropbtn {
		background-color: initial;
		background-image: linear-gradient(rgba(192, 154, 189, .84), rgba(116,77,123, .84) 50%);
		border-radius: 42px;
		border-width: 0;
		 border-radius: 42px;
		border-width: 0;
		color: #FFFFFF;
		font-size: 18px;
	  font-weight: 700;
	  justify-content: center;
	  letter-spacing: .04em;
	  line-height: 16px;
	  margin: 0;
	  padding: 10px 10px;
	  text-align: center;
	  text-decoration: none;
	  text-shadow: rgba(255, 255, 255, 0.4) 0 0 4px,rgba(255, 255, 255, 0.2) 0 0 12px,rgba(57, 31, 91, 0.6) 1px 1px 4px,rgba(57, 31, 91, 0.32) 4px 4px 16px;
	  vertical-align: baseline;
	}


	/* The container <div> - needed to position the dropdown content */
	.dropdown {
		position: relative;
		display: inline-block;
	}

	/* Dropdown Content (Hidden by Default) */
	.dropdown-content {
		display: none;
		position: absolute;
		background-color: initial;
		background-image: linear-gradient(rgba(192, 154, 189, .84), rgba(116,77,123, .84) 50%);
		border-radius: 12px;
		border-width: 0;
		 border-radius: 42px;
		border-width: 0;
		color: #FFFFFF;
		font-size: 18px;
		  font-weight: 700;
		  justify-content: center;
		  letter-spacing: .04em;
		  line-height: 16px;
		  margin: 0;
		  padding: 10px 10px;
		  text-align: center;
		  text-decoration: none;
		  text-shadow: rgba(255, 255, 255, 0.4) 0 0 4px,rgba(255, 255, 255, 0.2) 0 0 12px,rgba(57, 31, 91, 0.6) 1px 1px 4px,rgba(57, 31, 91, 0.32) 4px 4px 16px;
		  vertical-align: baseline;
		z-index: 15;
	}

	/* Links inside the dropdown */
	.dropdown-content a {
		color: white;
		padding: 12px 16px;
		text-decoration: none;
		display: block;
	}

	/* Change color of dropdown links on hover */
	.dropdown-content a:hover {background-image: linear-gradient(#744d7b, #744d7b 50%);}

	/* Show the dropdown menu on hover */
	.dropdown:hover .dropdown-content {display: block;}

	/* Change the background color of the dropdown button when the dropdown content is shown */
	.dropdown:hover .dropbtn {background-image: linear-gradient(#744d7b, #744d7b 50%);}


#rightImage
{
	position:fixed;
	width: 200px;
	bottom:0px;
	right:0px;
}

nav {
	margin: 0;
	background-color: #a77fa5;
	background-image: url("images/borderSide.png");
	background-repeat: repeat-y;
	background-position: right;
	
	position:relative;
	width: 20%;
	min-height: 90vh;
	top:15vh;
}

main{
	background-color:#f2e5f1;
	position:fixed;
	width: 80%;
	height: 85%;
	right:0px;
	bottom:0px;
}

.row {
  display: flex;
  flex-wrap: wrap;
  padding: 0 4px;
}


#imgtext {
  position: absolute;
  bottom: 15px;
  left: 15px;
  color: white;
  font-size: 20px;
}

#expandedImg
{
	max-width: 100%;
    max-height: 100%;
    display: block; /* remove extra space below image */
	margin: 0 auto;
}


.column {
  flex: 40%;
  max-width: 50%;
  padding: 0 4px;
}

.column img {
  margin-top: 8px;
  vertical-align: middle;
  width: 100%;
  opacity: 0.8; 
  cursor: pointer; 
}

.column  img:hover {
  opacity: 1;
}

#Navigation
{
	display: block;
}

/* Responsive layout - makes the two columns stack on top of each other instead of next to each other */
@media screen and (orientation:portrait), (max-width: 1000px) {

	
  .column {
    flex: 100%;
    max-width: 100%;
  }
	header h1{
	  font-size:1.5em;
	  display:block;
  }
  
}
